# NPM Configuration for Production Deployment
# Optimized for Render.com backend hosting

# Performance & Security
engine-strict=true
audit-level=moderate
fund=false
save-exact=true

# Network & Registry
registry=https://registry.npmjs.org/
fetch-timeout=60000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Build & Install Optimization for Render
production=false
optional=true
dev=true

# Caching (helps with Render build times)
cache-max=86400000
prefer-offline=false

# Logging
loglevel=warn

# Node version enforcement (match with package.json engines)
# This ensures consistent builds across local/Render environments
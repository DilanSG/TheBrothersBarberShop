# testing.env - The Brothers Barber Shop Testing Environment
# Configuraci√≥n optimizada para testing automatizado

# Server Configuration
NODE_ENV=test
PORT=5001

# Database Configuration (Test Database)
MONGODB_URI=mongodb://localhost:27017/barbershop_test
DB_CONNECTION_TIMEOUT=3000
DB_MAX_POOL_SIZE=3

# JWT Configuration (Short-lived for testing)
JWT_SECRET=test_jwt_secret_for_automated_testing_only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=2h

# Cloudinary Configuration (Mock/Test)
CLOUDINARY_CLOUD_NAME=test_cloud
CLOUDINARY_API_KEY=test_api_key
CLOUDINARY_API_SECRET=test_api_secret
CLOUDINARY_UPLOAD_PRESET=test_preset

# Frontend Configuration
FRONTEND_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# Cache Configuration (Reduced for testing)
CACHE_TTL=60
CACHE_MAX_KEYS=100

# Email Configuration (Mock for testing)
EMAIL_USER=test@barbershop.com
EMAIL_PASSWORD=test_password
EMAIL_FROM=test@barbershop.com

# Logging Configuration (Minimal for testing)
LOG_LEVEL=error
LOG_FILE=false
LOG_CONSOLE=false

# Testing Features
ENABLE_DEBUG_ROUTES=true
ENABLE_CORS_ALL=true
ENABLE_REQUEST_LOGGING=false
SKIP_EMAIL_SENDING=true
MOCK_CLOUDINARY=true
FAST_BCRYPT=true

# Performance Configuration (Fast for testing)
REQUEST_TIMEOUT=5000
BODY_LIMIT=1mb

# Security Configuration (Minimal for testing speed)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
BCRYPT_ROUNDS=1

# Test Database
TEST_DB_AUTO_CLEANUP=true
TEST_DB_SEED_DATA=true
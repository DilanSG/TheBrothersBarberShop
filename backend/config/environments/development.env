# development.env - The Brothers Barber Shop Development Environment
# Configuraci√≥n para desarrollo local con Docker

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/barbershop_dev
DB_CONNECTION_TIMEOUT=5000
DB_MAX_POOL_SIZE=5

# JWT Configuration
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_EXPIRES_IN=6h
JWT_REFRESH_EXPIRES_IN=30d

# Cloudinary Configuration (Development)
CLOUDINARY_CLOUD_NAME=your_dev_cloud_name
CLOUDINARY_API_KEY=your_dev_api_key
CLOUDINARY_API_SECRET=your_dev_api_secret
CLOUDINARY_UPLOAD_PRESET=barbershop_dev

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_KEYS=1000

# Email Configuration (Development - Optional)
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@barbershop-dev.com

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=true
LOG_CONSOLE=true

# Development Features
ENABLE_DEBUG_ROUTES=true
ENABLE_CORS_ALL=true
ENABLE_REQUEST_LOGGING=true

# Performance Configuration
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb

# Security Configuration (Relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
BCRYPT_ROUNDS=10
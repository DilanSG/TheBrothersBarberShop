# staging.env - The Brothers Barber Shop Staging Environment
# Configuración para testing de staging pre-producción

# Server Configuration
NODE_ENV=staging
PORT=5000

# Database Configuration (Staging Atlas cluster)
MONGODB_URI=${MONGODB_URI_STAGING}
DB_CONNECTION_TIMEOUT=8000
DB_MAX_POOL_SIZE=7

# JWT Configuration
JWT_SECRET=${JWT_SECRET_STAGING}
JWT_EXPIRES_IN=4h
JWT_REFRESH_EXPIRES_IN=7d

# Cloudinary Configuration (Staging)
CLOUDINARY_CLOUD_NAME=${CLOUDINARY_CLOUD_NAME_STAGING}
CLOUDINARY_API_KEY=${CLOUDINARY_API_KEY_STAGING}
CLOUDINARY_API_SECRET=${CLOUDINARY_API_SECRET_STAGING}
CLOUDINARY_UPLOAD_PRESET=barbershop_staging

# Frontend Configuration
FRONTEND_URL=${FRONTEND_URL_STAGING}
ALLOWED_ORIGINS=${ALLOWED_ORIGINS_STAGING}

# Cache Configuration
CACHE_TTL=600
CACHE_MAX_KEYS=2000

# Email Configuration (Staging)
EMAIL_USER=${EMAIL_USER_STAGING}
EMAIL_PASSWORD=${EMAIL_PASSWORD_STAGING}
EMAIL_FROM=staging@barbershop.com

# Logging Configuration (Verbose for staging)
LOG_LEVEL=debug
LOG_FILE=true
LOG_CONSOLE=true

# Staging Features
ENABLE_DEBUG_ROUTES=true
ENABLE_CORS_ALL=false
ENABLE_REQUEST_LOGGING=true

# Performance Configuration
REQUEST_TIMEOUT=25000
BODY_LIMIT=10mb

# Security Configuration (Production-like)
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX_REQUESTS=200
BCRYPT_ROUNDS=11

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
PERFORMANCE_MONITORING=true
# production.env - The Brothers Barber Shop Production Environment
# Configuración optimizada para producción en Render

# Server Configuration
NODE_ENV=production
PORT=${PORT}

# Database Configuration (MongoDB Atlas)
MONGODB_URI=${MONGODB_URI}
DB_CONNECTION_TIMEOUT=10000
DB_MAX_POOL_SIZE=10
DB_RETRY_WRITES=true
DB_W_MAJORITY=true

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=${JWT_EXPIRES_IN}
JWT_REFRESH_EXPIRES_IN=${JWT_REFRESH_EXPIRES_IN}

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=${CLOUDINARY_CLOUD_NAME}
CLOUDINARY_API_KEY=${CLOUDINARY_API_KEY}
CLOUDINARY_API_SECRET=${CLOUDINARY_API_SECRET}
CLOUDINARY_UPLOAD_PRESET=${CLOUDINARY_UPLOAD_PRESET}

# Frontend Configuration
FRONTEND_URL=${FRONTEND_URL}
ALLOWED_ORIGINS=${ALLOWED_ORIGINS}

# Cache Configuration (Optimized for production)
CACHE_TTL=900
CACHE_MAX_KEYS=5000
REDIS_URL=${REDIS_URL}

# Email Configuration
EMAIL_USER=${EMAIL_USER}
EMAIL_PASSWORD=${EMAIL_PASSWORD}
EMAIL_FROM=${EMAIL_FROM}

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=true
LOG_CONSOLE=true
LOG_ROTATION=true
LOG_MAX_FILES=30
LOG_MAX_SIZE=10m

# Production Features
ENABLE_DEBUG_ROUTES=false
ENABLE_CORS_ALL=false
ENABLE_REQUEST_LOGGING=false
TRUST_PROXY=true

# Performance Configuration
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb
COMPRESSION_ENABLED=true

# Security Configuration (Strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12
HELMET_ENABLED=true
CORS_CREDENTIALS=true

# Monitoring Configuration
SENTRY_DSN=${SENTRY_DSN}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}
HEALTH_CHECK_ENABLED=true

# SSL Configuration
FORCE_HTTPS=true
SECURE_COOKIES=true

# Render Specific
RENDER_SERVICE_URL=${RENDER_EXTERNAL_URL}
RENDER_INSTANCE_ID=${RENDER_INSTANCE_ID}
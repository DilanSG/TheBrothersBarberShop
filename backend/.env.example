# Configuración de entorno para The Brothers Barber Shop Backend

# Servidor
NODE_ENV=development
PORT=5000

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/brothers-barbershop

# JWT - Configuración diferenciada por rol para óptima UX y seguridad
JWT_SECRET=your_super_secret_jwt_key_here
# Access token fallback (se usan tiempos específicos por rol):
#   - Clientes (user): 6 horas - navegación y reservas cómodas
#   - Barberos (barber): 8 horas - jornada laboral completa  
#   - Administradores (admin): 4 horas - mayor seguridad para operaciones sensibles
JWT_ACCESS_EXPIRES_IN=4h
# Refresh token: 30 días (permite sesiones largas sin reautenticación frecuente)  
JWT_REFRESH_EXPIRES_IN=30d

# Cloudinary (para subida de imágenes)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=100

# Email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Redis (opcional)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=600

# Security Configuration
BCRYPT_ROUNDS=10
CORS_MAX_AGE=86400
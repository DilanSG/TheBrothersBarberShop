# ===========================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO
# The Brothers Barbershop Backend
# ===========================================

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/brothersbarbershop
MONGODB_URI_TEST=mongodb://localhost:27017/brothersbarbershop-test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_here_change_this_in_production
JWT_REFRESH_EXPIRE=30d

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration
EMAIL_FROM=noreply@brothersbarbershop.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Cloudinary Configuration (for image uploads)
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Redis Configuration (opcional - para cacheo en producción)
REDIS_URL=redis://localhost:6379

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
SLOW_REQUEST_THRESHOLD_MS=1000

# ===========================================
# INSTRUCCIONES DE CONFIGURACIÓN
# ===========================================
# 1. Copia este archivo a .env
# 2. Cambia todos los valores marcados como "change_this_in_production"
# 3. Configura tu base de datos MongoDB
# 4. Configura tus credenciales de email
# 5. Configura Cloudinary para subida de imágenes
# 6. En producción, usa variables de entorno seguras

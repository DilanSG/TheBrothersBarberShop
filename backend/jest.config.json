{
  "testEnvironment": "node",
  "transform": {
    "^.+\\.jsx?$": "babel-jest"
  },
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "moduleFileExtensions": ["js"],
  "setupFilesAfterEnv": ["./tests/setup.js"],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "clover"],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/config/**",
    "!src/tests/**"
  ],
  "verbose": true
}

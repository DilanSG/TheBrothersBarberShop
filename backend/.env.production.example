# Configuración de producción para Render
# Estas variables deben ser configuradas en el panel de Render

# Servidor
NODE_ENV=production
PORT=10000

# Base de datos MongoDB - Atlas
MONGODB_URI=your_mongodb_atlas_connection_string

# JWT - Configuración de producción con claves seguras
JWT_SECRET=your_production_super_secure_jwt_secret_at_least_32_characters
JWT_ACCESS_EXPIRES_IN=4h
JWT_REFRESH_EXPIRES_IN=30d

# Cloudinary - Configuración de producción
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# URLs de frontend permitidas
FRONTEND_URL=https://thebrothersbarbershop.vercel.app
ALLOWED_ORIGINS=https://thebrothersbarbershop.vercel.app,https://the-brothers-barbershop-frontend.vercel.app

# Email Configuration (Opcional - para notificaciones)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@thebrothersbarbershop.com

# Redis (Opcional - para caché avanzado)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=warn
LOG_MAX_FILES=7d
LOG_MAX_SIZE=50m

# Security Configuration
BCRYPT_ROUNDS=12
CORS_MAX_AGE=3600
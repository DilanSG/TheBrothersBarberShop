{
  "name": "the-brothers-barbershop-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend para The Brothers Barber Shop",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon --exec \"dotenv -e .env -- node\" src/index.js",
    "start": "node src/hybrid-server.js",
    "start:debug": "node src/step-debug-index.js",
    "start:minimal": "node src/minimal-server.js",
    "start:full": "dotenv -e .env -- node src/index.js",
    "start:prod": "NODE_ENV=production node src/index.js",
    "seed": "dotenv -e .env -- node src/scripts/seed.js",
    "seed:inventory": "dotenv -e .env -- node src/scripts/seedInventoryProducts.js",
    "superseed": "dotenv -e .env -- node src/scripts/superseed.js",
    "despoblar": "dotenv -e .env -- node src/scripts/despoblarDB.js",
    "despoblar:force": "dotenv -e .env -- node src/scripts/despoblarForzado.js",
    "verificar": "dotenv -e .env -- node src/scripts/verificarDB.js",
    "seed:demo": "dotenv -e .env -- node src/scripts/seedDemoData.js",
    "seed:barber-data": "dotenv -e .env -- node src/scripts/seedBarberData.js",
    "verify:barber-data": "dotenv -e .env -- node src/scripts/verifyBarberData.js",
    "test": "NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:unit": "NODE_ENV=test jest tests/unit",
    "test:integration": "NODE_ENV=test jest tests/integration",
    "lint": "eslint src --ext .js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mongodb-js/saslprep": "^1.3.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "4.0.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5",
    "xss-clean": "^0.1.4",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0 <=20.x"
  }
}

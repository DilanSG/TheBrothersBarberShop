# NPM Configuration for Frontend Production
# Optimized for Vercel deployment

# Performance & Security
engine-strict=true
audit-level=moderate
fund=false
save-exact=true

# Network & Registry  
registry=https://registry.npmjs.org/
fetch-timeout=60000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Build Optimization for Vercel
production=false
optional=false
dev=true

# Caching for faster Vercel builds
cache-max=86400000
prefer-offline=false

# Logging
loglevel=warn

# Legacy peer deps (for React projects)
legacy-peer-deps=false
strict-peer-deps=false